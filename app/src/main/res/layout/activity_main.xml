<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/MainMenuTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/page_MM"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="32dp"
        android:textColor="@color/purple_700"
        />
    <TextView
        android:id="@+id/MainMenuTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/MainMenuTitle"
        android:text="@string/page_MM2"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="@color/purple_500"
        />

    <Button
        android:id="@+id/button_createRide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEW RIDE"
        app:layout_constraintTop_toBottomOf="@+id/MainMenuTitle2"
        />

    <TextView
        android:id="@+id/MainMenuTitle3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/button_createRide"
        android:text="@string/page_MM3"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="@color/purple_500"
        />
    <Button
        android:id="@+id/button_viewPrev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIEW RIDE HISTORY"
        app:layout_constraintTop_toBottomOf="@+id/MainMenuTitle3"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/button_viewPrev"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginTop="100dp"
        android:src="@drawable/cclogo"
        />


</androidx.constraintlayout.widget.ConstraintLayout>